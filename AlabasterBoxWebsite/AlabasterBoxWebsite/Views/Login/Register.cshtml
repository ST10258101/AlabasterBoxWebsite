@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        /* Two-column layout for login and image */
        .login-container {
            display: flex;
            min-height: 100vh;
        }

        .login-form-wrapper {
            flex: 1 1 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .login-image {
            flex: 1 1 50%;
            /* Updated image path */
            background: url('../images/Login.jpg') center center / cover no-repeat;
            /* Ensure the image fills the column height */
            min-height: 100vh;
        }

        /* Form styling */
        .login-form {
            width: 100%;
            max-width: 400px;
        }

            .login-form h2 {
                text-align: center;
                margin-bottom: 2rem;
                font-weight: 600;
                font-size: 2rem;
                color: #0f2f36;
            }

            .login-form label {
                display: block;
                margin-bottom: .5rem;
                font-weight: 500;
                color: #0f2f36;
            }

            .login-form input[type="text"],
            .login-form input[type="password"] {
                width: 100%;
                padding: .75rem 1rem;
                border: 1px solid #ccc;
                border-radius: .375rem;
                margin-bottom: 1rem;
                font-size: 1rem;
                outline: none;
            }

            .login-form a.forgot {
                display: inline-block;
                margin-bottom: 1.5rem;
                font-size: .9rem;
                color: #f08a24;
                text-decoration: none;
            }

            .login-form .btn-login {
                width: 100%;
                padding: .75rem;
                background-color: #0f2f36;
                color: #fff;
                border: none;
                border-radius: .375rem;
                font-size: 1.125rem;
                cursor: pointer;
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }

            .login-form .btn-register {
                display: block;
                margin: 1.5rem auto 0;
                font-size: 1.125rem;
                color: #f08a24;
                text-decoration: none;
                font-weight: 500;
            }
    </style>
}

<div class="login-container">
    <div class="login-form-wrapper">
        <form class="login-form">
            <h2>Login</h2>
            <label for="username">User Name</label>
            <input type="text" id="username" name="username" placeholder="Enter your username" />

            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" />

            <a href="#" class="forgot">Forget Password</a>
            <button type="submit" class="btn-login">Login</button>
            <a href="~/Account/Register" class="btn-register">Register</a>
        </form>
    </div>
    <div class="login-image"></div>
</div>