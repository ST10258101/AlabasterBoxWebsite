@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .hero {
            width: 100vw;
            margin-left: calc(-50vw + 50%);
            position: relative;
            background: url('../images/PastEvents.jpg') center center / cover no-repeat;
            height: 350px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-shadow: 0 2px 4px rgba(0,0,0,0.6);
            margin-bottom: 3rem;
        }

        .hero-overlay {
            position: absolute;
            inset: 0;
            background: rgba(0,0,0,0.4);
        }

        .hero-content {
            position: relative;
            z-index: 1;
            text-align: center;
        }

        .hero-cta {
            display: inline-block;
            margin-top: 1.5rem;
            padding: 0.75rem 1.5rem;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: .375rem;
            font-size: 1rem;
            font-weight: 500;
        }

            .hero-cta:hover {
                background-color: #0056b3;
            }

        .events-container {
            max-width: 1200px;
            margin: 0 auto 2rem;
            padding: 0 1rem;
        }

        .event-card {
            border: 1px solid #e0e0e0;
            border-radius: .5rem;
            overflow: hidden;
            margin-bottom: 2rem;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

            .event-card img {
                width: 100%;
                height: 200px;
                object-fit: cover;
            }

        .event-body {
            padding: 1.5rem;
        }

        .event-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: .5rem;
            color: #0f2f36;
        }

        .event-desc {
            margin-bottom: 1rem;
            color: #444;
        }

        .event-meta {
            font-size: .9rem;
            margin-bottom: 1.25rem;
            color: #666;
        }

        .btn-volunteer,
        .btn-edit,
        .btn-delete {
            display: inline-block;
            padding: .5rem 1.25rem;
            margin-right: .5rem;
            border-radius: .375rem;
            font-size: .9rem;
            font-weight: 500;
            text-decoration: none;
            text-align: center;
            cursor: pointer;
        }

        .btn-volunteer {
            background-color: #007bff;
            color: #fff;
        }

            .btn-volunteer:hover {
                background-color: #0056b3;
            }

        .btn-edit {
            background-color: #28a745;
            color: #fff;
        }

            .btn-edit:hover {
                background-color: #218838;
            }

        .btn-delete {
            background-color: #dc3545;
            color: #fff;
        }

            .btn-delete:hover {
                background-color: #c82333;
            }
    </style>
}


<div class="hero">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1 class="display-4 font-weight-bold">Past Events</h1>
        <p class="lead mt-2">Then Jesus said to them, "So wherever you go in the world,<br /> tell everyone the Good News."</p>
        <a href="/PastEvents/AddPastEvents" class="hero-cta">Add Past Event</a>
    </div>
</div>

<div class="events-container">
    <div class="row">
        <!-- Example Event Card 1 -->
        <div class="col-md-6">
            <div class="event-card">
                <img src="~/images/event1.jpg" alt="Event 1">
                <div class="event-body">
                    <h2 class="event-title">Niska Pillay Children's Home Visit</h2>
                    <p class="event-desc">
                        Join us as we bring joy and essentials to the children at Niska Pillay Home.
                    </p>
                    <p class="event-meta">
                        Date: 2025-08-15 &nbsp;|&nbsp; Time: 10:00 AM
                    </p>
                    <a href="/Volunteers/SignUp?eventId=1" class="btn-volunteer">Volunteer</a>
                    <a href="/Events/Edit/1" class="btn-edit">Edit</a>
                    <a href="/Events/Delete/1" class="btn-delete">Delete</a>
                </div>
            </div>
        </div>

        <!-- Example Event Card 2 -->
        <div class="col-md-6">
            <div class="event-card">
                <img src="~/images/event2.jpg" alt="Event 2">
                <div class="event-body">
                    <h2 class="event-title">St. Tristan Children's Home Outreach</h2>
                    <p class="event-desc">
                        Help us support the St. Tristan children with fun activities and care packages.
                    </p>
                    <p class="event-meta">
                        Date: 2025-09-05 &nbsp;|&nbsp; Time: 2:00 PM
                    </p>
                    <a href="/Volunteers/SignUp?eventId=2" class="btn-volunteer">Volunteer</a>
                    <a href="/Events/Edit/2" class="btn-edit">Edit</a>
                    <a href="/Events/Delete/2" class="btn-delete">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>
