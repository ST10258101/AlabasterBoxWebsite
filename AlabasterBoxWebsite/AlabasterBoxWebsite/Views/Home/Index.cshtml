@if (!string.IsNullOrEmpty((string?)ViewBag.YouTubeVideoId))
{
    <div class="youtube-player" style="position:relative;padding-bottom:56.25%;height:0;overflow:hidden;">
        <iframe src="https://www.youtube.com/embed/@ViewBag.YouTubeVideoId?rel=0"
                style="position:absolute;top:0;left:0;width:100%;height:100%;border:0;"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen>
        </iframe>
    </div>
}
else
{
    <p>We couldn’t find any videos to display right now.</p>
}
